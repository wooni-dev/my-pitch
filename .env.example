# ===================================
# Client (Next.js) 환경 변수
# ===================================
# API 서버 URL (Docker 환경에서는 컨테이너 이름 사용)
# 개발: http://my-pitch-api:5000
# 배포: http://api.my-pitch.work
NEXT_PUBLIC_API_URL=

# ===================================
# API (Flask) 환경 변수
# ===================================
# MinIO 파일서버 설정
# 서버 내부 연결용 (컨테이너 간 통신)
MINIO_ENDPOINT=fileserver:9000

# 브라우저 다운로드용 (외부 접근 URL)
# 개발: http://files.my-pitch
# 배포: http://my-pitch.work/files
MINIO_PUBLIC_ENDPOINT=

# MinIO 관리자 계정 (보안을 위해 반드시 변경)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# MinIO 버킷 설정
ORIGINAL_BUCKET=original-tracks
SEPARATED_BUCKET=separated-tracks

# 파일 업로드 제한 (MB)
MAX_FILE_SIZE_MB=7

# 외부 분석 서버 URL (Colab 등)
ANALYSIS_SERVER_URL=

# 음원 분리 방식 설정
# True: 외부 서버(Colab) 사용 (개발 환경)
# False: 로컬 demucs 사용 (배포 환경)
USE_EXTERNAL_SEPARATOR=False

# 로컬 demucs 실행 시 임시 파일 경로
TEMP_UPLOAD_FOLDER=/tmp/uploads
TEMP_OUTPUT_FOLDER=/tmp/outputs

# Workers: 동시 처리 요청 수 (배포 시 서버 스펙에 맞춰 조정)
GUNICORN_WORKERS=1

# Log Level: info | warning | error (프로덕션은 info 권장)
LOG_LEVEL=info
